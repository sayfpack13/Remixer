<Window x:Class="Remixer.WPF.Views.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Audio" Height="380" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundPrimary}"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Style="{StaticResource CardBorder}" Margin="20">
        <StackPanel>
            <TextBlock Text="Export Audio Settings" Style="{StaticResource Heading2}" Margin="0,0,0,20"/>
            
            <TextBlock Text="Sample Rate" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
            <ComboBox x:Name="SampleRateComboBox" 
                      Style="{StaticResource ModernComboBox}"
                      SelectedIndex="1"
                      Margin="0,0,0,16">
                <ComboBoxItem Content="22050 Hz (Low Quality)"/>
                <ComboBoxItem Content="44100 Hz (CD Quality)" IsSelected="True"/>
                <ComboBoxItem Content="48000 Hz (Pro Audio)"/>
                <ComboBoxItem Content="96000 Hz (Studio)"/>
            </ComboBox>
            
            <TextBlock Text="Channels" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
            <ComboBox x:Name="ChannelsComboBox" 
                      Style="{StaticResource ModernComboBox}"
                      SelectedIndex="1"
                      Margin="0,0,0,16">
                <ComboBoxItem Content="Mono (1 Channel)"/>
                <ComboBoxItem Content="Stereo (2 Channels)" IsSelected="True"/>
            </ComboBox>
            
            <TextBlock Text="Bit Depth" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
            <ComboBox x:Name="BitDepthComboBox" 
                      Style="{StaticResource ModernComboBox}"
                      SelectedIndex="0"
                      Margin="0,0,0,16">
                <ComboBoxItem Content="16-bit (Standard)" IsSelected="True"/>
                <ComboBoxItem Content="24-bit (High Quality)"/>
                <ComboBoxItem Content="32-bit (Floating Point)"/>
            </ComboBox>
            
            <TextBlock Text="Output File" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="OutputFileTextBox"
                         Style="{StaticResource ModernTextBox}"
                         IsReadOnly="True"
                         Grid.Column="0"/>
                <Button Content="Browse..." 
                        Click="Browse_Click"
                        Style="{StaticResource SecondaryButton}" 
                        Width="100" 
                        Margin="8,0,0,0"
                        Grid.Column="1"/>
            </Grid>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Click="Cancel_Click"
                        Style="{StaticResource SecondaryButton}" 
                        Width="100" 
                        Margin="0,0,12,0"/>
                <Button Content="Export" 
                        Click="Export_Click"
                        Style="{StaticResource PrimaryButton}" 
                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>



