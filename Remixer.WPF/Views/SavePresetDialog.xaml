<Window x:Class="Remixer.WPF.Views.SavePresetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Preset" Height="280" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundPrimary}"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Style="{StaticResource CardBorder}" Margin="20">
        <StackPanel>
            <TextBlock Text="Save Preset" Style="{StaticResource Heading2}" Margin="0,0,0,20"/>
            
            <TextBlock Text="Preset Name" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
            <TextBox x:Name="PresetNameTextBox" 
                     FontSize="14" 
                     Padding="12,10"
                     Background="{StaticResource BackgroundSecondary}"
                     Foreground="{StaticResource TextPrimary}"
                     BorderBrush="{StaticResource BorderColor}"
                     BorderThickness="1"
                     Margin="0,0,0,16"/>
            
            <TextBlock Text="Description (Optional)" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
            <TextBox x:Name="DescriptionTextBox"
                     FontSize="13"
                     Padding="12,10"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="60"
                     Background="{StaticResource BackgroundSecondary}"
                     Foreground="{StaticResource TextPrimary}"
                     BorderBrush="{StaticResource BorderColor}"
                     BorderThickness="1"
                     Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Click="Cancel_Click"
                        Style="{StaticResource SecondaryButton}" 
                        Width="100" 
                        Margin="0,0,12,0"/>
                <Button Content="Save" 
                        Click="Save_Click"
                        Style="{StaticResource PrimaryButton}" 
                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>



