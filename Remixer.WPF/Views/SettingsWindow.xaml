<Window x:Class="Remixer.WPF.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Remixer.WPF.ViewModels"
        mc:Ignorable="d"
        Title="AI Settings" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.DataContext>
        <vm:SettingsViewModel />
    </Window.DataContext>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="AI Service Configuration" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <StackPanel Grid.Row="1">
            <!-- API Endpoint -->
            <Grid Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="API Endpoint:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" Text="{Binding ApiEndpoint}" 
                         Padding="8" FontSize="12"
                         ToolTip="Enter your DigitalOcean AI endpoint URL (e.g., https://your-app.ondigitalocean.app/v1/chat/completions)"/>
            </Grid>

            <!-- API Key -->
            <Grid Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="API Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ApiKeyPasswordBox" 
                             PasswordChanged="ApiKeyPasswordBox_PasswordChanged"
                             Padding="8" FontSize="12"
                             ToolTip="Enter your API key from DigitalOcean"/>
            </Grid>

            <!-- Info Section -->
            <Border Background="#F0F0F0" Padding="15" Margin="0,10,0,0" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="DigitalOcean Setup Instructions:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" FontSize="11" LineHeight="18">
                        <Run Text="1. Create an AI agent on DigitalOcean with default instructions for audio remixing"/>
                        <LineBreak/>
                        <Run Text="2. Copy the API endpoint URL from your DigitalOcean app"/>
                        <LineBreak/>
                        <Run Text="3. Copy the API key from DigitalOcean settings"/>
                        <LineBreak/>
                        <Run Text="4. Enter both values above and click Save"/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="Note: The AI agent should be configured with instructions to analyze audio features and return remix parameters in JSON format." FontStyle="Italic"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Test Connection" Command="{Binding TestConnectionCommand}" 
                    Padding="15,8" Margin="0,0,10,0" 
                    Background="#007ACC" Foreground="White" BorderThickness="0"/>
            <Button Content="Save" Command="{Binding SaveCommand}" 
                    Padding="15,8" Margin="0,0,10,0" 
                    Background="#28A745" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" 
                    Padding="15,8" 
                    Background="#6C757D" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>

