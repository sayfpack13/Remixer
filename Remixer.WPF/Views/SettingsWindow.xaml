<Window x:Class="Remixer.WPF.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Remixer.WPF.ViewModels"
        mc:Ignorable="d"
        Title="AI Settings" MinHeight="450" MinWidth="600" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundPrimary}"
        ResizeMode="CanResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <vm:SettingsViewModel />
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Scrollable Content Area -->
        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,0,16">
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="AI Service Configuration" Style="{StaticResource Heading2}" Margin="0,0,0,20"/>
                    
                    <!-- API Endpoint -->
                    <TextBlock Text="API Endpoint" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ApiEndpoint}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,16"
                             ToolTip="Enter your DigitalOcean AI endpoint URL (e.g., https://your-app.ondigitalocean.app/v1/chat/completions)"/>
                    
                    <!-- API Key -->
                    <TextBlock Text="API Key" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                    <Border Background="{StaticResource BackgroundSecondary}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,10"
                            Margin="0,0,0,16">
                        <PasswordBox x:Name="ApiKeyPasswordBox" 
                                     PasswordChanged="ApiKeyPasswordBox_PasswordChanged"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextPrimary}"
                                     FontSize="13"
                                     Padding="0"
                                     ToolTip="Enter your API key from DigitalOcean"/>
                    </Border>
                    
                    <!-- Info Section -->
                    <Border Background="{StaticResource BackgroundElevated}" 
                            Padding="16" 
                            Margin="0,8,0,0" 
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="DigitalOcean Setup Instructions" 
                                     Style="{StaticResource Heading3}" 
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap" 
                                     Style="{StaticResource BodyText}"
                                     FontSize="12"
                                     LineHeight="20">
                                <Run Text="1. Create an AI agent on DigitalOcean with default instructions for audio remixing"/>
                                <LineBreak/>
                                <Run Text="2. Copy the API endpoint URL from your DigitalOcean app"/>
                                <LineBreak/>
                                <Run Text="3. Copy the API key from DigitalOcean settings"/>
                                <LineBreak/>
                                <Run Text="4. Enter both values above and click Save"/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="Note: The AI agent should be configured with instructions to analyze audio features and return remix parameters in JSON format." 
                                     FontStyle="Italic"
                                     Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
        
        <!-- Fixed Button Bar at Bottom -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundElevated}" 
                Padding="0,16,0,0"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Test Connection" 
                        Command="{Binding TestConnectionCommand}" 
                        Style="{StaticResource SecondaryButton}"
                        Width="130" 
                        Margin="0,0,12,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="100" 
                        Margin="0,0,12,0"/>
                <Button Content="Save" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource PrimaryButton}" 
                        Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

